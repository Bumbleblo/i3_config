general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "cpu_usage"
order += "ipv6"
order += "path_exists VPN"
order += "wireless wlp1s0"
order += "ethernet eth0"
order += "battery 0"
order += "tztime local"

# display wifi connection
wireless wlp1s0 {
        format_up = "(%quality:%essid, %bitrate) %ip"
        format_down = "Wireless:off"
}

# REVIEW
# show ethernet cable connection
ethernet eth0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "Ethernet:off"
}

#shows the battery disregarding the physical state of the hardware
battery 0 {
        format = "%status %percentage %remaining"
        format_down = "No battery"
        status_chr = "CHR"
        status_bat = "BAT"
        status_unk = "UNK"
        status_full = "FULL"
        path = "/sys/class/power_supply/BAT1/uevent"
        low_threshold = 10
		last_full_capacity=true
		hide_seconds=true
}

# REVIEW
# show VPN status
path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

# display time and date in formate hh:mm:ss dd-mm-yy 
tztime local {
        format = "%H:%M:%S %d-%m-%Y"
}

# display usage of all cpus
cpu_usage {
	format="CPU_0: %cpu0 CPU_1: %cpu1 CPU_2: %cpu2"
	max_threshold=90
}

